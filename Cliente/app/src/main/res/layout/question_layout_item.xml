<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_item"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/level_item_shape"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/question_thumbnail"
        android:layout_height="match_parent"
        android:layout_width="100dp"

        />
    <ImageView
        android:id="@+id/tick_question"
        android:src="@drawable/check_mark"
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/question_preview_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In vulputate lectus nec aliquam auctor. Interdum et malesuada fames ac ante ipsum primis in faucibus. Etiam laoreet auctor dignissim. Sed pretium commodo libero ac efficitur."
        android:fadingEdge="vertical"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/question_thumbnail"/>


</RelativeLayout>